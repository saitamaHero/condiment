{
    "name": "saitamahero/condiment",
    "description": "A PHP library for evaluating conditional statements",
    "keywords": ["php", "conditions", "evaluator", "workflow", "logic"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dionicio Acevedo",
            "email": "tec.dionicioacevedo@gmail.com"
        }
    ],
    "require": {
      "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "Condiment\\": "src/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "scripts": {
      "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    }
}
